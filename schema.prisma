}

model Invoice {
  id         String   @id @default(uuid()) @postgresql.Uuid
  sessions   Session? @relation("Invoice_sessions", fields: [sessionsId], references: [id])
  sessionsId String?  @map("sessions") @postgresql.Uuid
  users      User?    @relation("Invoice_users", fields: [usersId], references: [id])
  usersId    String?  @map("users") @postgresql.Uuid
