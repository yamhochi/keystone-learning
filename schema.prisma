datasource postgresql {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model User {
  id       String    @id @default(uuid()) @postgresql.Uuid
  name     String    @default("")
  email    String    @default("")
  socials  Social[]  @relation("Social_attendees")
  payments Payment[] @relation("Payment_payer")
}

model Social {
  id        String    @id @default(uuid()) @postgresql.Uuid
  title     String    @default("")
  date      DateTime?
  attendees User[]    @relation("Social_attendees")
  payments  Payment[] @relation("Payment_socials")
}

model Payment {
  id           String    @id @default(uuid()) @postgresql.Uuid
  payer        User?     @relation("Payment_payer", fields: [payerId], references: [id])
  payerId      String?   @map("payer") @postgresql.Uuid
  payment_date DateTime?
  socials      Social?   @relation("Payment_socials", fields: [socialsId], references: [id])
  socialsId    String?   @map("socials") @postgresql.Uuid

  @@index([payerId])
  @@index([socialsId])
}